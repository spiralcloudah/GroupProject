<?xml version="1.0" encoding="utf-8"?>
<androidx.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">


        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvFirstLast"
            android:layout_alignLeft="@+id/tvFirstLast"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="34dp"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            tools:textColor="@color/colorSecondaryText" />


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/tvDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_foreground"
            android:visibility="visible"
            tools:background="#000000"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfilePic"
            android:layout_alignParentLeft="false"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLocation"
            android:layout_alignStart="@id/imageView2"
            android:layout_alignLeft="@id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:autoLink="web"
            android:text="Write a caption..."
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorSecondaryText" />

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_below="@+id/ivImage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/heart_logo_vector"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage"
            android:layout_alignStart="@+id/tvDescription"
            android:layout_alignLeft="@+id/tvDescription"
            android:layout_alignBottom="@+id/ivHeart"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:text="Date here"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibBookmark"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/save"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvFirstLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivProfilePic"
            android:layout_toRightOf="@+id/ivProfilePic"
            android:text="First Last"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorSecondaryText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_below="@id/ivProfilePic"
            android:layout_alignLeft="@id/ivProfilePic"
            android:layout_alignBottom="@id/tvLocation"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:tint="@color/colorAccent"
            card_view:srcCompat="@drawable/maps" />
    </RelativeLayout>
</androidx.widget.CardView>