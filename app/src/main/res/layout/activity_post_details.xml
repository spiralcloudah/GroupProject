<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tvFirstLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:layout_toRightOf="@+id/ivUserProfile"
        android:text="First Last"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:textColor="@color/colorSecondaryText" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/tvUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        tools:textColor="@color/colorSecondaryText" />


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/ibBookmark"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="visible"
        tools:background="#000000"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_alignLeft="@+id/tvUser"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-17dp"
        android:text="Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDay"
        android:layout_alignStart="@id/ivDetailsCal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:autoLink="web"
        android:text="Write a caption..."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignStart="@+id/ivProfilePic"
        android:layout_alignEnd="@id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="11dp"
        android:text="Title"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_alignStart="@+id/tvLocation"
        android:layout_alignLeft="@+id/tvLocation"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:text="Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorSecondaryText"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ivDetailsHeart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/tvDate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/heart_logo_vector" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:autoLink="all"
        android:fontFamily="sans-serif-light"
        android:text="Date here"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ibBookmark"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/ivDetailsHeart"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="62dp"
        android:background="@drawable/ic_bookmark_outline"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_below="@+id/tvEventTitle"
        android:layout_alignStart="@id/tvTitle"
        android:layout_alignBottom="@id/tvLocation"
        android:layout_marginBottom="3dp"
        android:src="@drawable/maps"
        android:tint="@color/colorAccent" />

    <ImageView
        android:id="@+id/ivDetailsCal"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/imageView"
        android:layout_alignBottom="@id/tvDay"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_calendar_clock"
        android:tint="@color/colorAccent" />

</RelativeLayout>